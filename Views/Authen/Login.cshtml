@using TNPWMSWEB.Models.Request
@model LoginModel;
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Mylayout.cshtml";
}


<!-- ===============================================-->
<!--    Main Content-->
<!-- ===============================================-->
<div class="row flex-center min-vh-100 py-6">
    <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
        <a class="d-flex flex-center mb-4" href="~/index.html">
            <h4 class="text-900">ยินดีต้อนรับ เข้าสู่ระบบจัดการคลังสินค้า</h4>
            <span class="fw-bolder fs-8 d-inline-block text-warning"></span>
        </a>

        <div class="d-flex flex-center align-items-center py-3">
            <img src="~/assets/img/logos/LOGO01.png" alt="" />
        </div>
        <div class="card">
            <div class="card-body p-4 p-sm-5">
                <div class="row flex-between-center mb-2">
                </div>
                <form method="POST" asp-controller="Authen" asp-action="Login">

                    <div class="mb-3 col">
                        <input class="form-control form-control-lg" type="text" placeholder="Username" asp-for="USERNAME"/>
                        <span asp-validation-for="USERNAME" class="text-danger"></span>
                    </div>
                    <div class="mb-3 col">
                        <input class="form-control form-control-lg" type="password" placeholder="Password" asp-for="PASSWORD" />
                        <span asp-validation-for="PASSWORD" class="text-danger"></span>
                    </div>
                    <div class="row flex-between-center">
                        <div class="col-auto">
                           
                        </div>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-primary d-block w-100 mt-3 font-header-mbs" type="submit" name="submit" style="font-size:x-large; background:#1b2ff1">เข้าสู่ระบบ</button>
                    </div>
                </form>

            </div>
            </div>
    </div>
</div>

<!-- ===============================================-->
<!--    End of Main Content-->
<!-- ===============================================-->
